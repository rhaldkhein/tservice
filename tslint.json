{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "ordered-imports": false,
    "no-shadowed-variable": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "double"
    ],
    "semicolon": [
      true,
      "always"
    ]
  }
}